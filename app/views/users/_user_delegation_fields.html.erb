<tr class="nested-fields ldap_search">
    <td>
        <%= link_to_remove_association  f do %>
            <span class="glyphicon glyphicon-minus-sign" style='color:red;'></span>
        <% end %>
    </td>
    <td>
        <%= f.text_field :email, :placeholder=>'Enter name or email to search',
                class: 'ldap_query', 
                title: f.object.name,
                data: {
                    url: ldap_search_path(:format=>:json),
                    email: f.object.email,
                    toggle: 'tooltip'
                } %>
    </td>
</tr>
