<strong>Status: </strong><%= record.approval_state.status_str %>
<br/>


<div class="btn-group">
  <%= link_to 'View', record, :class=>'btn btn-default' %>
  <% if record.approval_state.ready_to_submit? %>
    <%= link_to 'Submit',
      submit_user_form_path(
        :user_id=>record.user_id,
        :id=>record.approval_state.id),
        :method=>:post,
        :class=>'btn btn-success' %>
  <% end %>
  <%= link_to 'Edit', edit_polymorphic_url(record),
    :disabled=>!can?(:edit, record),
    class: "btn btn-info" %>
  <%= link_to 'Delete', polymorphic_path(record),
    :method=>:delete,
    :data=>{ :confirm => 'Are you sure you want to cancel this request?' },
    :disabled=>!can?(:destroy, record),
    :class=>'btn btn-danger' %>
</div>

