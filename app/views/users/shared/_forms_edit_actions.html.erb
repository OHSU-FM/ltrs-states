<div class='row'>
  <div class='col-xs-12'>
    <div class="btn-group pull-right">
      <!-- only on edit or new -->
      <% if record.new_record? || ( params['action'] == 'edit' && can?(:edit, record) ) %>
        <%= submit_tag 'Save', class: 'btn btn-success' %>
      <% end %>

      <!-- only on show or edit (not new) -->
      <% if can? :destroy, record  %>
        <!-- only on show or edit (not new) -->
        <!-- allow deletion of forms that have already been saved -->
        <% unless record.new_record? %>
          <%= submit_tag "Delete", name: :delete, confirm: 'Are you sure?', class: 'btn btn-danger', disabled: !can?(:delete, record) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
