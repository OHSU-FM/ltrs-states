<div class="container" style="width: inherit;">
  <div class="row">
    <div class="col-lg-6">
      <h4>Traveler Details</h4>
      <% if @reimbursement_request.new_record? %>
        <% if current_user.has_delegators? %>
          <div class="ui-widget-content ui-corner-all wide partial_form">
            <%= f.label :user_id, 'Submit request for:' %><br/>
            <%= f.select :user_id, options_from_collection_for_select([current_user] + current_user.delegators, "id", "full_name", current_user.id) %>
          </div>
        <% else %>
          <p>Submitting Travel Request as: <%= current_user.full_name %></p>
        <% end %>
      <% else %>
        <% if @reimbursement_request.form_email != @reimbursement_request.user.email %>
          <div class="ui-widget-content ui-corner-all wide partial_form">
            Submitted for:
            <%= @reimbursement_request.user.full_name %>
            <br/>
            <b>Submitted by</b>
            <%= @reimbursement_request.form_user %>
          </div>
        <% else %>
          <p>Travel Request for <%= @reimbursement_request.user.full_name %></p>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-6"></div>
  </div>
</div>

<div class="container" style="width: inherit;">
  <h4>Travel Event Details</h4>
  <div class="row">
    <div class="col-lg-6">
      <div class="other_fmr">
        <%= f.select :other_fmr_attending,
          options_for_select([['yes', true], ['no', false]], f.object.air_use.to_s),
          { prompt: 'Select' }, data: { target: '#air_use_form' }, required: true %>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="depart_date">
        <%= f.label :depart_date, 'Departure date:' %>
        <br />
        <%= f.date_field :depart_date, required: :required,
          min: '2000-01-01', max: '2100-01-1' %>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="return_date">
        <%= f.label :return_date, 'Return date:' %>
        <br />
        <%= f.date_field :return_date, required: :required,
          min: '2000-01-01', max: '2100-01-1' %>
      </div>
    </div>
  </div>

  <h4>Event & Travel Expenses</h4>
  <div class="daily_meal_reimb">
    <div class="row">
      <%= f.fields_for :meal_reimbursement_requests do |mrrf| %>
        <%= render partial: 'meal_reimbursement_requests/form', locals: { f: mrrf} %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="toggle_form">
        <%= f.label :air_use, 'Is traveler submitting for airline reimbursement?' %>
        <p>Note, you must submit a receipt for this expense to receipts@ohsu.edu</p>
        <%= f.select :air_use,
          options_for_select([['yes', true], ['no', false]], f.object.air_use),
          { prompt: 'Select' }, data: { target: '#air_use_form' }, required: true %>
      </div>
      <div class="toggle_form">
        <%= f.label :lodging_reimb, 'Is traveler submitting for lodging reimbursement?' %>
        <p>Note, you must submit a receipt for this expense to receipts@ohsu.edu</p>
        <%= f.select :lodging_reimb, options_for_select([['yes', true], ['no', false]], f.object.lodging_reimb),
          { prompt: 'Select' }, data: { target: '#lodging_form' }, required: true %>
      </div>

      <div class="toggle_form">
        <%= f.label :traveler_mileage_reimb, 'Is traveler submitting for mileage reimbursement?' %>
        <p>Note, you must submit a receipt for this expense to receipts@ohsu.edu</p>
        <%= f.select :traveler_mileage_reimb, options_for_select([['yes', true], ['no', false]], f.object.traveler_mileage_reimb),
          { prompt: 'Select' }, data: { target: '#lodging_form' }, required: true %>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="toggle_form">
        <%= f.label :car_rental, 'Is traveler submitting for rental car reimbursement?' %>
        <p>Note, you must submit a receipt for this expense to receipts@ohsu.edu</p>
        <%= f.select :car_rental, options_for_select([['yes', true], ['no', false]], f.object.car_rental),
          { prompt: 'Select' }, data: { target: '#rental_car_form' }, required: true %>
      </div>

      <div class="toggle_form">
        <%= f.label :meal_host_reimb, 'Is traveler submitting for meal hosting reimbursement?' %>
        <p>Note, you must submit a receipt for this expense to receipts@ohsu.edu</p>
        <%= f.select :meal_host_reimb, options_for_select([['yes', true], ['no', false]], f.object.meal_host_reimb),
          { prompt: 'Select' }, data: { target: '#rental_car_form' }, required: true %>
      </div>
    </div>
  </div>
</div>

