<div class="ui-widget-header ui-corner-all"><h1>Listing Leave Requests</h1></div>
<div class="ui-widget-content ui-corner-all wide partial_form">
<table>
<thead>
  <tr>
    <th class="ui-widget-header" >Submission Date</th>
    <th class="ui-widget-header" >Leave Starts</th>
    <th class="ui-widget-header" >Leave Ends</th>
    <th class="ui-widget-header" >ID</th>
    <th class="ui-widget-header" >Travel</th>
    <th class="ui-widget-header" >Approval Status</th>   
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @leave_requests.each do |leave_request| %>
  <tr>
    <td><%= leave_request.created_at.strftime('%Y-%m-%d  %r') %></td>
    <td><%= leave_request.start_date %></td>
    <td><%= leave_request.end_date %></td>
    <td><%= leave_request.user_id %></td>
    <td><%= leave_request.need_travel %></td>
    <td><%= leave_request.status %></td>

    <td><%= link_to 'Show', leave_request_path(leave_request) %></td>
    <td><%= button_to 'Delete', leave_request, :confirm => 'Are you sure?', :method=>:delete %></td>
    <td><%= if not leave_request.leave_request_extra.nil? then '*' end %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Leave Request', new_leave_request_path, :class=>'button' %>
</div>

    <div class="digg_pagination">
        <%= will_paginate @leave_requests, :container => false, :param_name=>:leave_request_page  %>
    </div>

