    { prompt: 'Select' }, data: { target: '#rental_car_form' } %>
  <table id="rental_car_form" class="stop_flouc">
    <tbody>
      <tr>
        <td>
          <%= f.label :car_rental_co, 'Car rental company:' %>
        </td>
        <td>
          <%= f.text_field :car_rental_co %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :car_arrive, 'Rental Start Date' %>
        </td>
        <td>
