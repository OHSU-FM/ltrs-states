        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :car_depart, 'Rental End Date' %>
        </td>
        <td>
          <%= f.date_field :car_depart, class: 'datepicker ret_depart_date',
            min: '2000-01-01', max: '2100-01-1' %>
