<div class="ui-widget-content ui-corner-all wide partial_form">
  <table>
    <tbody>
      <tr>
        <td>
          <%= f.label :form_user, 'Person requesting travel' %>
          <br />
          <%= f.text_field :form_user %>
        </td>
        <td>
          <%= f.label :form_email, 'Email address' %>
          <br />
          <%= f.email_field :form_email %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="ui-widget-content ui-corner-all wide partial_form">
  <h3> Travel Dates</h3>
  <table>
    <tbody>
      <tr>
        <td>
          <%= f.label :dest_desc, 'Travel Destination:' %>
          <br />
          <%= f.text_field :dest_desc %>
        </td>
      </tr>
    </tbody>
  </table>
  <table>
    <tbody>
      <tr>
        <td>
          <%= f.label :dest_depart_date, 'Departure date:' %>
          <br />
          <%= f.date_field :dest_depart_date, required: :required,
            min: '2000-01-01', max: '2100-01-1' %>
        </td>
        <td>
          <%= f.label :dest_depart_hour, 'Departure time: (optional)' %>
          <br />
          <%= f.select :dest_depart_hour, hf_hour_options, { prompt: 'Hour' } %>:
          <%= f.select :dest_depart_min, ['0', '15', '30', '45'], { prompt: 'Min' } %>
        </td>
        <td>
          <%= f.label :dest_arrive_hour, 'Arrival time: (optional)' %>
          <br />
          <%= f.select :dest_arrive_hour, hf_hour_options, { prompt: 'Hour' } %>
          <%= f.select :dest_arrive_min, ['0', '15', '30', '45'], { prompt: 'Min' } %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :ret_depart_date, 'Return date:' %>
          <br />
          <%= f.date_field :ret_depart_date, required: :required,
            min: '2000-01-01', max: '2100-01-1' %>
        </td>
        <td>
          <%= f.label :ret_depart_hour, 'Departure time: (optional)' %>
          <br />
          <%= f.select :ret_depart_hour, hf_hour_options, { prompt: 'Hour' } %>
          <%= f.select :ret_depart_min, ['0', '15', '30', '45'], { prompt: 'Min' } %>
        </td>
        <td>
          <%= f.label :ret_arrive_hour,'Arrival time: (optional)' %>
          <br />
          <%= f.select :ret_arrive_hour, hf_hour_options, { prompt: 'Hour' } %>
          <%= f.select :ret_arrive_min, ['0', '15', '30', '45'], { prompt: 'Min' } %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="toggle_form">
  <h4> Expense </h4>
  <%= f.label :expense_card_use, 'Will travel expenses be charged to an account?' %>
  <%= f.select :expense_card_use,
    options_for_select([['yes', true], ['no', false]], f.object.expense_card_use),
    { prompt: 'Select' }, data: { target: '#expense_card_form' } %>
  <table id="expense_card_form" class="stop_flouc">
    <tbody>
      <tr>
        <td colspan='2'>
          <%= f.label :expense_card_type, 'Account to charge:'%>
          <br/>
          <%= f.select :expense_card_type, grouped_options_for_select(hf_funding_options, f.object.expense_card_type), prompt: 'Select' %>
        </td>
      </tr>
      <tr>
        <td colspan='2'>
          <%= f.label :expense_card_desc, 'Additional Information:' %>
          <br/>
          <%= f.text_area :expense_card_desc, size: '40x3' %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
